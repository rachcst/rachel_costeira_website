---
import BaseLayout from "../layouts/BaseLayout.astro"
import "../styles/globa.css"
const pageTitle="Blog Post"

const { frontmatter } = Astro.props;

const { title, description, date, author } = frontmatter;
---

<BaseLayout pageTitle={title}>
    <h1>{title}</h1>
    <p>by {author} - {date}</p>
    <slot/>
</BaseLayout>
<style>

	body{
		  background-image:
    linear-gradient(
      0deg,
      rgba(187, 136, 114, 0.6) 0% 12.5%,
      rgba(255, 240, 245, 0.6) 12.5% 37.5%,
      rgba(157, 178, 210, 0.6) 37.5% 62.5%,
      rgba(255, 240, 245, 0.6) 62.5% 87.5%,
      rgba(187, 136, 114, 0.6) 87.5% 100%
    ),
    linear-gradient(
      90deg,
      rgba(187, 136, 114, 0.6) 0% 12.5%,
      rgba(255, 240, 245, 0.6) 12.5% 37.5%,
      rgba(157, 178, 210, 0.6) 37.5% 62.5%,
      rgba(255, 240, 245, 0.6) 62.5% 87.5%,
      rgba(187, 136, 114, 0.6) 87.5% 100%
    );

  background-size: 80px 80px, 80px 80px;
	}
</style>
