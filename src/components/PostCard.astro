---
const { title, url, date, author } = Astro.props
---
<li>
    <a href={url}>
        <h1>{title}</h1>
        <p>by {author} - published on {date}</p>
    </a>
</li>

<style>
    h1{
        text-decoration: none;
        font-size: 1rem;
    }
    a{
        text-decoration: none;
    }
    li{
        list-style-type: none;
        width: 100%;
    }
</style>