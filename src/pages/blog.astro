---
import BaseLayout from "../layouts/BaseLayout.astro";
import PostCard from "../components/PostCard.astro"
import "../styles/globa.css"
const pageTitle = "Blog";
const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
const tags = ['programming', 'fashion', 'blogging', 'reviews', 'essays', 'recipies']
---
<BaseLayout pageTitle={pageTitle}>

  <ul class="tabs">
    <li class="tab"><a href="/blog/">all posts</a></li>
    {tags.map((tag) => <li class="tab"><a href={`/tags/${tag}`}>{tag}</a></li>)}
  </ul>




  
  {
    allPosts.map((post: any) => <PostCard url={post.url} title={post.frontmatter.title} date={post.frontmatter.date} author={post.frontmatter.author} />)
  }
</BaseLayout>

<style>
  body{
		  background-image:
    linear-gradient(
      0deg,
      rgba(187, 136, 114, 0.6) 0% 12.5%,
      rgba(255, 240, 245, 0.6) 12.5% 37.5%,
      rgba(157, 178, 210, 0.6) 37.5% 62.5%,
      rgba(255, 240, 245, 0.6) 62.5% 87.5%,
      rgba(187, 136, 114, 0.6) 87.5% 100%
    ),
    linear-gradient(
      90deg,
      rgba(187, 136, 114, 0.6) 0% 12.5%,
      rgba(255, 240, 245, 0.6) 12.5% 37.5%,
      rgba(157, 178, 210, 0.6) 37.5% 62.5%,
      rgba(255, 240, 245, 0.6) 62.5% 87.5%,
      rgba(187, 136, 114, 0.6) 87.5% 100%
    );

  background-size: 80px 80px, 80px 80px;
	}
</style>